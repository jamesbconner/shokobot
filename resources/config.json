{
  "chroma": {
    "persist_directory": "./.chroma",
    "collection_name": "tvshows"
  },
  "data": {
    "shows_json": "input/shoko_tvshows.json"
  },
  "openai": {
    "model": "gpt-5-nano",
    "embedding_model": "text-embedding-3-large",
    "reasoning_effort": "medium",
    "output_verbosity": "medium",
    "max_output_tokens": 8192
  },
  "mcp": {
    "enabled": true,
    "cache_dir": "data/mcp_cache",
    "fallback_count_threshold": 3,
    "fallback_score_threshold": 0.5,
    "timeout": 30,
    "servers": {
      "anime": {
        "command": "/Users/james/Code/mcp-server-anime/.venv/bin/python",
        "args": ["-m", "mcp_server_anime.server"],
        "cwd": "/Users/james/Code/mcp-server-anime",
        "env": {
          "PYTHONPATH": "/Users/james/Code/mcp-server-anime/src"
        }
      }
    }
  },
  "ingest": {
    "batch_size": 100
  },
  "logging": {
    "level": "DEBUG"
  }
}
